<%- include('header') -%>

<h1>Atvinnuumsókn</h1>
<form method="post" action="/">
  <label for="name">Nafn</label>
  <input id="name" name="name" value="<%= data.name %>">

  <label for="email">Netfang</label>
  <input id="email" name="email" value="<%= data.email %>">

  <label for="phone">Sími</label>
  <input id="phone" name="phone" value="<%= data.phone %>">

  <label for="text">Kynning á þér</label>
  <input id="text" name="text" value="<%= data.text %>">

  <h2>Starf sem sótt er um</h2>
  
  <label><input type="radio" name="programmer" value="job"> Forritari </label>
  <label><input type="radio" name="designer" value="job"> Hönnuður</label>
  <label><input type="radio" name="project__manager" value="job"> Verkefnastjóri </label>


  <button>Senda umsókn</button>

  <ul>
    <% errors.forEach((error) => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
</form>

<%- include('footer') -%>